<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gritgreen"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/grit_spelling"
                android:id="@+id/grit_spelling"/>
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_background"
                android:padding="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="Summary"
                    android:id="@+id/draggable_prompt_text"
                    android:layout_marginTop="15dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_below="@+id/draggable_prompt_text"
                    android:layout_marginTop="5dp"
                    android:id="@+id/draggable_white_line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recommended"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Values"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/draggable_white_line"
                    android:layout_alignStart="@id/draggable_white_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up"
                    android:layout_below="@+id/recommended"
                    android:layout_alignStart="@+id/recommended"
                    android:layout_marginTop="10dp"
                    android:id="@+id/draggable_box1"
                    android:layout_marginStart="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:textSize="25sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/drag_text_1"
                        android:text="Family"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp" />


                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alts"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Mission"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/draggable_box1"
                    android:layout_alignStart="@id/draggable_white_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up"
                    android:layout_below="@+id/alts"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/draggable_box2"
                    android:layout_marginTop="10dp"
                    android:layout_alignStart="@+id/alts"
                    android:layout_marginStart="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:textSize="25sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/drag_text_2"
                        android:text="Stress Management"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comms"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Communication"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/draggable_box2"
                    android:layout_alignStart="@id/draggable_white_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up"
                    android:layout_below="@+id/comms"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/alts"
                    android:layout_marginStart="5dp"
                    android:id="@+id/draggable_box3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:textSize="25sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/drag_text_3"
                        android:text="Communication Styles"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/physical"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Physical Goals"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/draggable_box3"
                    android:layout_alignStart="@id/draggable_white_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up"
                    android:layout_below="@+id/physical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/alts"
                    android:layout_marginStart="5dp"
                    android:id="@+id/draggable_box4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:textSize="25sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/drag_text_4"
                        android:text="Track HRV"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mental"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Mental Goals"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/draggable_box4"
                    android:layout_alignStart="@id/draggable_white_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up"
                    android:layout_below="@+id/mental"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/alts"
                    android:layout_marginStart="5dp"
                    android:id="@+id/draggable_box5"
                    android:layout_marginBottom="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:textSize="25sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/drag_text_5"
                        android:text="Mindfulness"/>


                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="350dp"
        android:backgroundTint="#EE39a789"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>