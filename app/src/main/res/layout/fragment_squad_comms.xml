<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profpicture1"
                android:contentDescription="@string/profile_image_desc"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_left"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/leftArrow1"
                    android:contentDescription="@string/word_picker_leftarrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:id="@+id/word_tumbler1"
                    android:textSize="30sp"
                    android:text="@string/facebook"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_right"
                    android:contentDescription="@string/word_picker_rightarrow"
                    android:layout_centerVertical="true"
                    android:id="@+id/RightArrow1"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profpicture2"
                android:contentDescription="@string/profile_image_desc"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_left"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/leftArrow2"
                    android:contentDescription="@string/word_picker_leftarrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:id="@+id/word_tumbler2"
                    android:textSize="30sp"
                    android:text="@string/text"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_right"
                    android:contentDescription="@string/word_picker_rightarrow"
                    android:layout_centerVertical="true"
                    android:id="@+id/RightArrow2"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profpicture3"
                android:contentDescription="@string/profile_image_desc"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_left"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/leftArrow3"
                    android:contentDescription="@string/word_picker_leftarrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:id="@+id/word_tumbler3"
                    android:textSize="30sp"
                    android:text="@string/email"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_right"
                    android:contentDescription="@string/word_picker_rightarrow"
                    android:layout_centerVertical="true"
                    android:id="@+id/RightArrow3"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profpicture4"
                android:contentDescription="@string/profile_image_desc"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_left"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/leftArrow4"
                    android:contentDescription="@string/word_picker_leftarrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:id="@+id/word_tumbler4"
                    android:textSize="30sp"
                    android:text="@string/text"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_right"
                    android:contentDescription="@string/word_picker_rightarrow"
                    android:layout_centerVertical="true"
                    android:id="@+id/RightArrow4"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profpicture5"
                android:contentDescription="@string/profile_image_desc"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_left"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/leftArrow5"
                    android:contentDescription="@string/word_picker_leftarrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:id="@+id/word_tumbler5"
                    android:textSize="30sp"
                    android:text="@string/phone"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/word_pick_right"
                    android:contentDescription="@string/word_picker_rightarrow"
                    android:layout_centerVertical="true"
                    android:id="@+id/RightArrow5"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>
        <Button

            android:layout_gravity="center_horizontal"
            android:id="@+id/send_squad_invites"
            android:text="@string/send_invite"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/sign_up"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</ScrollView>
